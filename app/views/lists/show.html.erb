<%= render "shared/header" %>

<div class='list'>
  <%= link_to "リストの編集", edit_list_path(@list.id), method: :get, class: "list_edit_btn" %>
  <div class='list_info'>
    <div class='list_img_content'>
      <%= image_tag @list.image, class: "list_img" %>
    </div>
    <h3 class='list_name'>
      <%= @list.list_name %>
    </h3>
    <div class="item-count">
      登録されているアイテム数: 
    </div>
  </div>

  <%= link_to "アイテム登録", new_item_path, class: "item_new_btn" %>
    

  <% @items.each do |item| %>
    <p><%= item.item_name %></p>
    <!-- 他のアイテムの情報も表示する場合はここに追加 -->
  <% end %>
</div>