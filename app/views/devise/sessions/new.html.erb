<%= render "shared/header" %>


<div class= "background_user_page" >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'user_signin_form' }) do |f| %>
    <div class='form_header'>
      ログイン情報入力
    </div>
    <div class='form_wrap'>
      <div class="form_text">
        メールアドレス
        <span class="required">必須</span>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>


      <div class="form_text">
        パスワード
        <span class="required">必須</span>
      </div>
      <%= f.password_field :password, autocomplete: "current-password" %>


      <% if devise_mapping.rememberable? %>
        <div class="form_text">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    </div>
  <% end %>
</div>
