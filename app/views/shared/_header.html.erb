<header class= "header">
  <%= link_to image_tag("life-stocker-logo.png", class:"life_stocker_icon"), "/" %>
  <%= link_to image_tag("life-stocker-title.png", class:"life_stocker_title"), "/" %>
  <ul class="header_btn_wrap">
    <% if user_signed_in? %>
      <li><%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "header_btn" %></li>
      <li>
        <div class="user_btn">
          <div>
            <%= link_to image_tag("gear.png", class: "gear_logo"), edit_user_registration_path %>
          </div>
          <div class="user_nickname">
          <%= current_user.nickname %>
          </div>
        </div>
      </li>
      
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "header_btn" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "header_btn" %></li>
    <% end %>
  </ul>
</header>